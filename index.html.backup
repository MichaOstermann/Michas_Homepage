        <!-- HERO BACKGROUND ANIMATION - INLINE -->
        <script>
(function() {
  console.log('üåå Hero Background Init');
  
  const canvas = document.getElementById('heroViz');
  if (!canvas) return;
  
  const ctx = canvas.getContext('2d');
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
  
  // ALIEN BIO-TECH BACKGROUND
  let time = 0;
  const organisms = [];
  
  // Bio-Zellen / Organismen
  for (let i = 0; i < 8; i++) {
    organisms.push({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      size: Math.random() * 60 + 40,
      vx: (Math.random() - 0.5) * 0.2,
      vy: (Math.random() - 0.5) * 0.2,
      pulseSpeed: Math.random() * 0.02 + 0.01,
      pulseOffset: Math.random() * Math.PI * 2,
      segments: Math.floor(Math.random() * 3) + 4
    });
  }
  
  // DNA Helix Punkte
  const helixPoints = [];
  for (let i = 0; i < 80; i++) {
    helixPoints.push({
      angle: (i / 80) * Math.PI * 8,
      offset: i * 15,
      radius: 30
    });
  }
  
  function drawBioCell(org) {
    const pulse = Math.sin(time * org.pulseSpeed + org.pulseOffset);
    const size = org.size + pulse * 10;
    
    // √Ñu√üere Membran (glow)
    const gradient = ctx.createRadialGradient(org.x, org.y, 0, org.x, org.y, size);
    gradient.addColorStop(0, 'rgba(6, 255, 240, 0.15)');
    gradient.addColorStop(0.5, 'rgba(6, 255, 240, 0.05)');
    gradient.addColorStop(1, 'rgba(6, 255, 240, 0)');
    ctx.fillStyle = gradient;
    ctx.beginPath();
    ctx.arc(org.x, org.y, size, 0, Math.PI * 2);
    ctx.fill();
    
    // Innere Struktur (segmentiert wie Xenomorph)
    ctx.strokeStyle = `rgba(6, 255, 240, ${0.3 + pulse * 0.1})`;
    ctx.lineWidth = 1.5;
    for (let i = 0; i < org.segments; i++) {
      const angle = (i / org.segments) * Math.PI * 2 + time * 0.5;
      const x1 = org.x + Math.cos(angle) * (size * 0.3);
      const y1 = org.y + Math.sin(angle) * (size * 0.3);
      const x2 = org.x + Math.cos(angle) * (size * 0.7);
      const y2 = org.y + Math.sin(angle) * (size * 0.7);
      ctx.beginPath();
      ctx.moveTo(x1, y1);
      ctx.lineTo(x2, y2);
      ctx.stroke();
    }
    
    // Kern
    ctx.fillStyle = `rgba(6, 255, 240, ${0.4 + pulse * 0.2})`;
    ctx.beginPath();
    ctx.arc(org.x, org.y, 3, 0, Math.PI * 2);
    ctx.fill();
  }
  
  function drawDNAHelix() {
    const centerX = canvas.width * 0.85;
    const startY = 0;
    
    ctx.strokeStyle = 'rgba(6, 255, 240, 0.15)';
    ctx.lineWidth = 2;
    
    for (let i = 0; i < helixPoints.length - 1; i++) {
      const p1 = helixPoints[i];
      const p2 = helixPoints[i + 1];
      
      const y1 = startY + p1.offset + time * 20;
      const y2 = startY + p2.offset + time * 20;
      
      if (y1 > canvas.height) continue;
      if (y2 < 0) continue;
      
      const x1 = centerX + Math.sin(p1.angle + time * 0.5) * p1.radius;
