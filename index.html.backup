          const gameId = btn.getAttribute('data-game');
          const container = document.getElementById('video-container-' + gameId);
          const thumbnail = document.getElementById('thumbnail-' + gameId);
          const videoId = container.getAttribute('data-video');
          
          console.log('Setting up inline player for:', gameId, 'with video ID:', videoId);
          
          // Click handler - try iframe first, fallback to new tab
          btn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Play button clicked for:', gameId);
            console.log('Video ID:', videoId);
            
            // Special handling: For enshrouded and soulmask, open directly in new tab
            // (These games have embedding restrictions)
            if (gameId === 'enshrouded' || gameId === 'soulmask') {
              console.log('Opening in new tab due to embedding restrictions:', gameId);
              window.open('https://www.youtube.com/watch?v=' + videoId, '_blank');
              return;
            }
            
            // For diablo and ark: Try iframe embed
            const iframe = document.createElement('iframe');
            iframe.setAttribute('width', '100%');
            iframe.setAttribute('height', '100%');
            iframe.setAttribute('src', 'https://www.youtube-nocookie.com/embed/' + videoId + '?autoplay=1&rel=0&modestbranding=1&controls=1&showinfo=0');
            iframe.setAttribute('frameborder', '0');
            iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share');
            iframe.setAttribute('allowfullscreen', '');
            iframe.setAttribute('loading', 'lazy');
