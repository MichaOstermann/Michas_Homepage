    (function() {
      document.addEventListener('DOMContentLoaded', function() {
        console.log('Initializing inline game video players...');
        
        // Select all play buttons
        const allPlayButtons = document.querySelectorAll('.game-play-btn');
        console.log('Found play buttons:', allPlayButtons.length);
        
