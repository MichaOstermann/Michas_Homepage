  <script>
    document.getElementById('newsletterForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalBtnText = submitBtn.innerHTML;
      
      // Loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '‚è≥ Wird gesendet...';
      
      const name = document.getElementById('newsletter-name').value;
      const email = document.getElementById('newsletter-email').value;
      const interests = Array.from(document.querySelectorAll('input[name="interests[]"]:checked'))
                             .map(cb => cb.value);
      
      // Save to localStorage (Backup)
      const subscribers = JSON.parse(localStorage.getItem('newsletterSubscribers') || '[]');
      subscribers.push({
        name: name,
        email: email,
        interests: interests,
        timestamp: new Date().toISOString(),
        status: 'active'
      });
      localStorage.setItem('newsletterSubscribers', JSON.stringify(subscribers));
      
      try {
        // Try to send to PHP backend (only works on live server with PHP)
        const response = await fetch('newsletter-subscribe.php', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, email, interests })
        });
        
        if (response.ok) {
          const result = await response.json();
          console.log('Newsletter via PHP gesendet:', result);
        }
      } catch (error) {
        // PHP not available - that's ok, we have localStorage
        console.log('PHP nicht verf√ºgbar, nur LocalStorage:', error.message);
      }
      
      // Always show success
      document.getElementById('newsletterForm').style.display = 'none';
      document.getElementById('newsletterSuccess').style.display = 'block';
