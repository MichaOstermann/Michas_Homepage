  <script>
    (function() {
      const targetId = 'contact';
      const links = document.querySelectorAll('a[href="#' + targetId + '"]');
      const target = document.getElementById(targetId);
      if (links.length && target) {
        links.forEach(l => {
          l.addEventListener('click', function(e) {
            // Prevent default to enforce smooth scroll & focus even if already at position
            e.preventDefault();
            target.scrollIntoView({behavior: 'smooth', block: 'start'});
            // Visual highlight & focus for accessibility
            target.classList.add('contact-focus');
            setTimeout(() => {
              const nameField = document.getElementById('name');
              if (nameField) nameField.focus();
            }, 550);
            // Remove highlight after animation
            setTimeout(() => target.classList.remove('contact-focus'), 1600);
          });
        });
        // If page is loaded with #contact in URL directly
        if (window.location.hash === '#' + targetId) {
          setTimeout(() => {
            target.classList.add('contact-focus');
            const nameField = document.getElementById('name');
            if (nameField) nameField.focus();
            setTimeout(() => target.classList.remove('contact-focus'), 1600);
          }, 120);
        }
      }
    })();
