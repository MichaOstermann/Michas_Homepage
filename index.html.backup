  <!-- Professional Contact Form Handler -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contactForm');
      const sendBtn = document.getElementById('sendBtn');
      // Dynamisch Honeypot-Feld einf√ºgen (verhindert statische Bot-Anpassung)
      (function injectHoneypot(){
        if (!form) return;
        if (document.getElementById('hp_field')) return; // bereits vorhanden
        const wrapper = document.createElement('div');
        wrapper.style.position='absolute';
        wrapper.style.left='-9999px';
        wrapper.style.top='-9999px';
        wrapper.style.width='1px';
        wrapper.style.height='1px';
        wrapper.style.overflow='hidden';
        const input = document.createElement('input');
        input.type='text';
        input.id='hp_field';
        input.name='hp_field';
        input.setAttribute('tabindex','-1');
        input.setAttribute('autocomplete','off');
        input.setAttribute('aria-hidden','true');
        wrapper.appendChild(input);
        // F√ºge hinter dem Nachricht-Textarea ein
        const messageEl = document.getElementById('message');
        if (messageEl && messageEl.parentNode) {
          messageEl.parentNode.appendChild(wrapper);
        } else {
          form.appendChild(wrapper);
        }
      })();
      
      if (!form || !sendBtn) return;
      
      sendBtn.addEventListener('click', async function() {
        // Get form values
        const name = document.getElementById('name').value.trim();
        const email = document.getElementById('email').value.trim();
        const message = document.getElementById('message').value.trim();
  const hp_value = (document.getElementById('hp_field')?.value || '').trim();
        
        // Validation
        if (!name || !email || !message) {
          showNotification('‚ö†Ô∏è Bitte f√ºlle alle Felder aus!', 'error');
          return;
        }
        
        // Email validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          showNotification('‚ö†Ô∏è Bitte gib eine g√ºltige E-Mail-Adresse ein!', 'error');
          return;
        }
        
        // Disable button and show loading
        const originalText = sendBtn.textContent;
        sendBtn.disabled = true;
        sendBtn.textContent = '‚è≥ Sende...';
        sendBtn.style.opacity = '0.6';
        sendBtn.style.cursor = 'not-allowed';
        
        try {
          // Send to PHP backend (einfache Version)
          const response = await fetch('contact-simple.php', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              name: name,
              email: email,
              message: message,
              hp_field: hp_value
            })
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Erfolg immer anzeigen; differenziere stillen Mail-Fehler
            if (result.mailFailed) {
              console.warn('Admin-Mail fehlgeschlagen (mailFailed=true)');
            }
            showNotification('‚úÖ Nachricht erfolgreich versendet! Wir melden uns schnellstm√∂glich zur√ºck.', 'success');
            if (result.honeypotTriggered) {
              console.warn('Honeypot triggered ‚Äì silent success.');
            }
            form.reset();
            
            // Success animation
            sendBtn.textContent = '‚úÖ Versendet!';
            sendBtn.style.background = 'linear-gradient(135deg, #28C840 0%, #06FFF0 100%)';
            
            setTimeout(() => {
              sendBtn.textContent = originalText;
              sendBtn.style.background = 'linear-gradient(135deg, #06FFF0 0%, #8B5CF6 100%)';
              sendBtn.disabled = false;
              sendBtn.style.opacity = '1';
              sendBtn.style.cursor = 'pointer';
            }, 3000);
          } else {
            throw new Error(result.message || 'Fehler beim Versenden');
          }
        } catch (error) {
          console.error('Contact form error:', error);
          if (error && error.message && error.message.includes('Fehler beim Versenden')) {
            console.warn('Mail-Versand fehlgeschlagen ‚Äì siehe Server-Log contact-log.txt');
          }
          showNotification('‚ùå Fehler beim Versenden. Bitte versuche es sp√§ter erneut.', 'error');
          
          // Reset button
          sendBtn.textContent = originalText;
          sendBtn.disabled = false;
          sendBtn.style.opacity = '1';
          sendBtn.style.cursor = 'pointer';
        }
      });
      
      // Notification system
      function showNotification(message, type) {
        // Remove existing notification
        const existing = document.querySelector('.contact-notification');
        if (existing) existing.remove();
        
        // Create notification
        const notification = document.createElement('div');
        notification.className = 'contact-notification';
        notification.textContent = message;
        notification.style.cssText = `
          position: fixed;
          top: 20px;
          right: 20px;
          background: ${type === 'success' ? 'linear-gradient(135deg, #28C840, #06FFF0)' : 
                        type === 'error' ? 'linear-gradient(135deg, #FF5F57, #FF1744)' : 
                        'linear-gradient(135deg, #06FFF0, #8B5CF6)'};
          color: #fff;
          padding: 1rem 1.5rem;
          border-radius: 8px;
          box-shadow: 0 4px 20px rgba(0,0,0,0.3);
          font-weight: 600;
          z-index: 10000;
          animation: slideIn 0.3s ease-out;
          max-width: 400px;
          font-size: 0.95rem;
          line-height: 1.4;
        `;
        
        document.body.appendChild(notification);
        
        // Auto-remove after 5 seconds
        setTimeout(() => {
          notification.style.animation = 'slideOut 0.3s ease-out';
          setTimeout(() => notification.remove(), 300);
        }, 5000);
      }
      
      // Add animations
      const style = document.createElement('style');
      style.textContent = `
        @keyframes slideIn {
          from { transform: translateX(400px); opacity: 0; }
          to { transform: translateX(0); opacity: 1; }
        }
        @keyframes slideOut {
          from { transform: translateX(0); opacity: 1; }
          to { transform: translateX(400px); opacity: 0; }
        }
      `;
      document.head.appendChild(style);
      
      // Ctrl+Enter support
      const messageField = document.getElementById('message');
      if (messageField) {
        messageField.addEventListener('keydown', function(e) {
          if (e.ctrlKey && e.key === 'Enter') {
            sendBtn.click();
          }
        });
      }
    });
  </script>

